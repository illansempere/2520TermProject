<div class="container">
  <h1 class="page-header">Edit</h1>
  <form action=<%="/reminder/update/" + reminderItem.id %> method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="titleInput" placeholder="Title" name="title"
        value="<%= reminderItem.title %>">
    </div>
    <div class="form-group">
      <label for="Date">Date</label>
      <input type="text" class="form-control" id="DateInput" placeholder="Date" name="date"
        value="<%= reminderItem.date %>">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="descriptionInput" rows="3" placeholder="Description"
        name="description"><%= reminderItem.description %></textarea>
    </div>
    <div class="form-group">
      <label for="subtasks">Subtasks</label>
      <textarea class="form-control" id="SubtasksInput" rows="2" placeholder="Subtasks"
        name="subtasks"><%= reminderItem.subtasks %></textarea>
    </div>
    <div class="form-group">
      <label for="tags">Tags</label>
      <input class="form-control" id="TagsInput" placeholder="Tags" name="tags" value="<%= reminderItem.tags %>">
    </div>
    <div>
      <label for="location">Include Location?</label><br>
      <% if (reminderItem.locationbool=='true' ) { %>
        True <input type="radio" name="locationTF" id="true" value="true" onclick="Show()" checked="checked">
        <% } else { %>
          True <input type="radio" name="locationTF" id="true" value="true" onclick="Show()">
          <% } %>

            <% if (reminderItem.locationbool=='false' ) { %>
              False <input type="radio" name="locationTF" id="false" value="false" onclick="Hide()" checked="checked">
              <% } else { %>
                False <input type="radio" name="locationTF" id="false" value="false" onclick="Hide()">
                <% } %>
    </div>
    <% if (reminderItem.locationbool=='false' ) { %>

          <div id='location' style="display: none;" class="row">
            <div class="col">
              <label for="title">Address</label>
              <input type="text" class="form-control" id="titleInput" placeholder="Address" name="address" value="<%= reminderItem.location.address %>">
            </div>
            <div class="col">
              <label for="title">City</label>
              <input type="text" class="form-control" id="titleInput" placeholder="City" name="city" value="<%= reminderItem.location.city %>"> 
            </div>
            <div class="col">
              <label for="title">State/Province</label>
              <input type="text" class="form-control" id="titleInput" placeholder="State/Province" name="stateprovince" value="<%= reminderItem.location.stateprovince %>">
            </div>
            <div class="col">
              <label for="title">Country</label>
              <input type="text" class="form-control" id="titleInput" placeholder="Country" name="country" value="<%= reminderItem.location.country %>">
            </div>
          </div>
          <% } else { %> 
            <div id='location' class="row">
              <div class="col">
                <label for="title">Address</label>
                <input type="text" class="form-control" id="titleInput" placeholder="Address" name="address" value="<%= reminderItem.location.address %>">
              </div>
              <div class="col">
                <label for="title">City</label>
                <input type="text" class="form-control" id="titleInput" placeholder="City" name="city" value="<%= reminderItem.location.city %>"> 
              </div>
              <div class="col">
                <label for="title">State/Province</label>
                <input type="text" class="form-control" id="titleInput" placeholder="State/Province" name="stateprovince" value="<%= reminderItem.location.stateprovince %>">
              </div>
              <div class="col">
                <label for="title">Country</label>
                <input type="text" class="form-control" id="titleInput" placeholder="Country" name="country" value="<%= reminderItem.location.country %>">
              </div>
            </div>
            <% } %> 

          <div class="form-group">
            <label for="completed">Completed</label>
            <div class="radio">
              <label>
                <% if (reminderItem.completed==true || reminderItem.completed=='true' ) { %>
                  <input type="radio" name="completed" id="true" value="true" checked="checked">
                  <% } else { %>
                    <input type="radio" name="completed" id="true" value="true">
                    <% } %>
                      True
              </label>
            </div>

            <div class="radio">
              <label>
                <% if (reminderItem.completed==false || reminderItem.completed=='false' ) { %>
                  <input type="radio" name="completed" id="false" value="false" checked="checked">
                  <% } else { %>
                    <input type="radio" name="completed" id="false" value="false">
                    <% } %>
                      False
              </label>
            </div>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
<script>
  function Show() {
    x = document.getElementById('location')
    x.style.display = null
  }
  function Hide() {
    x = document.getElementById('location')
    x.style.display = 'none'
  }
</script>