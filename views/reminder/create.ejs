<div class="container">
  <form action="/reminder" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="titleInput" placeholder="Title" name="title">
    </div>
    <div class="form-group">
      <label for="Date">Date</label>
      <input type="text" class="form-control" id="DateInput" placeholder="Date" name="date">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="descriptionInput" rows="3" placeholder="Description"
        name="description"></textarea>
    </div>
    <div class="form-group">
      <label for="subtasks">Subtasks</label>
      <textarea class="form-control" id="SubtasksInput" rows="2" placeholder="Subtasks" name="subtasks"></textarea>
    </div>
    <div class="form-group">
      <label for="tags">Tags</label>
      <input class="form-control" id="TagsInput" placeholder="Tags" name="tags">
    </div>
    <div>
      <label for="location">Include Location?</label><br>
      True <input type="radio" name="locationTF" id="true" value="true" onclick="Show()">
      False <input type="radio" name="locationTF" id="false" value="false" checked="checked" onclick="Hide()">
    </div>
    <div id='location' style="display: none;" class="row">
      <div class="col">
        <label for="title">Address</label>
        <input type="text" class="form-control" id="titleInput" placeholder="Address" name="address">
      </div>
      <div class="col">
        <label for="title">City</label>
        <input type="text" class="form-control" id="titleInput" placeholder="City" name="city">
      </div>
      <div class="col">
        <label for="title">State/Province</label>
        <input type="text" class="form-control" id="titleInput" placeholder="State/Province" name="stateprovince">
      </div>
      <div class="col">
        <label for="title">Country</label>
        <input type="text" class="form-control" id="titleInput" placeholder="Country" name="country">
      </div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
<script>
  function Show() {
    x = document.getElementById('location')
    x.style.display = null
  }
  function Hide() {
    x = document.getElementById('location')
    x.style.display = 'none'
  }
</script>